<% provide(:title, 'All users') %>
<h1>All users</h1>

<div>

  <%= form_tag users_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search]%>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</div>

<%= will_paginate %>
<ul class="users">
  <%= render @users %>
</ul>
<%= will_paginate %>
