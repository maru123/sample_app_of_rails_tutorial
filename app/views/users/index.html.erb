<% provide(:title, 'All users') %>
<h1>All users</h1>

<div>

  <%= form_tag users_path, :method => 'get' do %>
    <p>
      <%= label_tag :name %>
      <%= text_field :conditions, :name %>
      <%= label_tag :email %>
      <%= email_field :conditions, :email %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</div>

<%= will_paginate %>
<ul class="users">
  <%= render @users %>
</ul>
<%= will_paginate %>
